{
  "name": "expensa-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "cd apps/web && npm run dev",
    "dev:mobile": "cd apps/mobile && npm start",
    "build:web": "cd apps/web && npm run build",
    "start:web": "cd apps/web && npm start",
    "build:mobile": "cd apps/mobile && npx expo build",
    "lint": "cd apps/web && npm run lint"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}